{
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "runtimePlatform": {
        "operatingSystemFamily": "LINUX",
        "cpuArchitecture": "ARM64"
    },
    "family": "grafana",
    "memory": "2 GB",
    "cpu": ".5 vCPU",
    "executionRoleArn": "arn:aws:iam::145723653607:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "grafana",
            "image": "public.ecr.aws/k5r8z9q8/grafana:0.1.0",
            "essential": true,
            "portMappings": [
              {
                "containerPort": 3000,
                "hostPort": 3000,
                "protocol": "tcp",
                "name": "grafana-3000-tcp",
                "appProtocol": "http"
              }
            ],
            "secrets": [
                {"name": "RDS_HOSTNAME",
                 "valueFrom": "arn:aws:ssm:ap-southeast-2:145723653607:parameter/RDS_HOSTNAME_Follower"
                },
                {
                    "name": "RDS_USER",
                    "valueFrom": "arn:aws:ssm:ap-southeast-2:145723653607:parameter/RDS_USER"
                },
                {
                    "name": "RDS_PASSWORD",
                    "valueFrom": "arn:aws:ssm:ap-southeast-2:145723653607:parameter/RDS_PASSWORD"
                },
                {
                    "name": "RDS_DB_NAME",
                    "valueFrom": "arn:aws:ssm:ap-southeast-2:145723653607:parameter/RDS_DB_NAME"
                },
                {
                    "name": "RDS_PORT",
                    "valueFrom": "arn:aws:ssm:ap-southeast-2:145723653607:parameter/RDS_PORT"
                },
                {
                    "name": "AWS_ACCESS_KEY",
                    "valueFrom": "arn:aws:ssm:ap-southeast-2:145723653607:parameter/GRAFANA_MONITOR_ACCESS_KEY"
                },
                {
                    "name":"AWS_ACCESS_KEY",
                    "valueFrom": "arn:aws:ssm:ap-southeast-2:145723653607:parameter/GRAFANA_MONITOR_SECRET_ACCESS_KEY"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/grafana",
                    "awslogs-region": "ap-southeast-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}
